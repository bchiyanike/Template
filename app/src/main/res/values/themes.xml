<?xml version="1.0" encoding="utf-8"?>
<!-- File: app/src/main/res/values/themes.xml -->
<resources>
    <!-- Universal theme parent, available on all API levels -->
    <style name="Theme.Lionico.Template" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Transparent system bars for edge-to-edge Compose -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>

        <!-- Splash Screen (Android 12+ API, backward compatible via AndroidX) -->
        <!-- Uses a simple, literal color the system can read before app starts -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>

        <!-- Action Bar disabled (redundant with NoActionBar parent, but explicit) -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>