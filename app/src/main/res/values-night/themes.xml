<!-- File: app/src/main/res/values-night/themes.xml -->
<resources>
    <style name="Theme.Lionico.Template" parent="android:Theme.Material.NoActionBar">
        <!-- Same transparent/edge-to-edge setup -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>

        <!-- Splash Screen -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>

        <!-- REMOVED: windowActionBar and windowNoTitle (redundant and incompatible) -->
    </style>
</resources>